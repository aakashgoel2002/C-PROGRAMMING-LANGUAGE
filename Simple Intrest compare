#include<stdio.h> 

int main()
{	int x,y,z;
	float r1,r2,r3;
	int t1,t2,t3;
	printf("Enter the Principal Amount for Ram:");
	scanf("%d",&x);
	printf("Enter the interest rate for Ram:");
	scanf("%f",&r1);
	printf("Enter the time(in years) for Ram:");
	scanf("%d",&t1);
	float s1 = (x*r1*t1)/100;
	printf("SI for Ram is:%f\n", s1);
	printf("Enter the Principal Amount for Mohan:");
	scanf("%d",&y);
	printf("Enter the interest rate for Mohan:");
	scanf("%f",&r2);
	printf("Enter time(in years) for Mohan:");
	scanf("%d",&t2);
	float s2 = (y*r2*t2)/100;
	printf("SI for Mohan is:%f\n", s2);
	printf("Enter the Principal Amount for Sohan:");
	scanf("%d",&z);
	printf("Enter the interest rate for Sohan:");
	scanf("%f",&r3);
	printf("Enter the time(in years) for Sohan:");
	scanf("%d",&t3);
	float s3 = (z*r3*t3)/100;
	printf("SI for Sohan is:%f\n", s3);
    printf("Maximum interest is paid by:");
	s1 > s2 ? (s1 > s3 ?printf("Ram"): printf("Sohan")) : (s2 > s3 ?printf("Mohan") :printf("Sohan"));
    return 0;
	

 
}
